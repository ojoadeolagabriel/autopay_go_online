<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projects.synapse.com.autopaymonitors">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".views.basic.LoginView" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".views.basic.Main" android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".views.basic.BankProcessDetail" android:configChanges="orientation"/>
        <activity android:name=".views.basic.ForgotPassword" android:configChanges="orientation" android:screenOrientation="portrait"/>
    </application>

</manifest>
