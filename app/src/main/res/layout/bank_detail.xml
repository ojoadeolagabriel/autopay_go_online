<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:orientation="vertical" android:padding="13dp">

    <LinearLayout
        android:background="@drawable/item_background_new"
        android:orientation="horizontal"
        android:layout_height="70dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_height="65dp"
            android:layout_width="wrap_content">

            <TextView

                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"
                android:id="@+id/bankProcessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:id="@+id/bankProcessorDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            style="@style/image_boarder"
            android:paddingRight="8dp" android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_alignRight="@id/bankProcessorDescription"
            android:id="@+id/icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_refresh_gray"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="3dp"
        android:background="@drawable/item_background_gray"
        android:layout_width="match_parent"
        android:layout_height="100dp"></LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:background="@drawable/item_background_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>
