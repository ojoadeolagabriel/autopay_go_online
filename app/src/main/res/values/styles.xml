<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="image_boarder">
        <item name="android:radius">10dp</item>
        <item name="android:width">20dp</item>
        <item name="android:color">#c0c0c0</item>
    </style>

    <style name="menuStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:colorEdgeEffect">@android:color/darker_gray</item>
    </style>

</resources>
